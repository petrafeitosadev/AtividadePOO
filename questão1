function ChecarResposta(){
    const alternativaCorreta = "alternativa1"
const opcaoEscolhida = document.querySelector ('input[name="alternativa"]:checked')
if(opcaoEscolhida){
if(opcaoEscolhida.value === alternativaCorreta){
alert("Resposta Correta")
window.location.href = ("questao2.html")
  }else{
alert("Escolheu a alternativa errada")
  }
  }else{
alert("Escolha uma alternatica")
  }
}
